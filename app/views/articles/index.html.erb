<h1>Listing articles</h1>
<p><%= link_to 'New article', new_article_path, class: 'btn btn-secondary'%></p>

<%= form_tag articles_path, method: :get, remote: true do %>
  <div class="input-group">
    <%= text_field_tag :q, "", value: params[:q], class: "form-control" %>
    <span class="input-group-btn">
      <%= submit_tag "Search", class: "btn btn-light" %>
      <%= link_to "Clear", articles_path, class: "btn btn-primary" %>
    </span>
  </div>
<% end %>
<div id='article_list'>
  <%= render 'list' %>
</div>
