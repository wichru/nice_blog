<%= link_to 'Back', articles_path, class: 'btn btn-secondary' %>
<p>
  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4"><%= @article.title %></h1>
      <p class="lead"><%= @article.text %>
        <p>Author: <%= @article.user&.email %></p>
        <p><strong>Tags: </strong><%= @article.tags.join(', ') %></p>
        <p>
          <% if @like %>
          <%= link_to article_like_path(@article, @like), method: :delete do %>
            <%= fa_icon 'thumbs-up' %>
            Like
            <% end %>
            <% else %>
              <%= link_to article_likes_path(@article), method: :post do %>
              <%= fa_icon 'thumbs-up' %>
                Like
              <% end %>
          <% end %>
          (<%= @article.likes.count %>)
        </p>
</div>
</div>

<h3>Add comment</h3>
<%= render 'comments/form' %>

<table class='table table-hover'>
  <thead>
    <tr>
      <td>Commenter</td>
      <td>Comment</td>
    </tr>
  </thead>
  <tbody>
<%= render @article.comments %>
</tbody>
</table>
